rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regole per le prenotazioni
    match /bookings/{bookingId} {
      // Chiunque può leggere le prenotazioni (per visualizzazione pubblica)
      allow read: if true;
      
      // Solo utenti autenticati possono creare/modificare/eliminare prenotazioni
      allow create, update, delete: if request.auth != null;
    }
    
    // Regole per i pacchetti
    match /packages/{packageId} {
      // Chiunque può leggere i pacchetti (per visualizzazione pubblica)
      allow read: if true;
      
      // Solo utenti autenticati possono creare/modificare/eliminare pacchetti
      allow create, update, delete: if request.auth != null;
    }
    
    // Regole per il contenuto del sito
    match /siteContent/{contentId} {
      // Chiunque può leggere il contenuto del sito (per visualizzazione pubblica)
      allow read: if true;
      
      // Solo utenti autenticati possono modificare il contenuto del sito
      allow create, update, delete: if request.auth != null;
    }
    
    // Regole per i clienti
    match /clients/{clientId} {
      // Chiunque può leggere i dati dei clienti (per visualizzazione pubblica se necessario)
      allow read: if true;
      
      // Solo utenti autenticati possono creare/modificare/eliminare clienti
      allow create, update, delete: if request.auth != null;
    }
    
    // Regole per le immagini caricate
    match /uploads/{allPaths=**} {
      // Chiunque può leggere le immagini (per visualizzazione pubblica)
      allow read: if true;
      
      // Solo utenti autenticati possono caricare/modificare/eliminare immagini
      allow create, update, delete: if request.auth != null;
    }
    
    // Regole per altre collezioni (fallback)
    match /{document=**} {
      // Chiunque può leggere
      allow read: if true;
      
      // Solo utenti autenticati possono scrivere
      allow create, update, delete: if request.auth != null;
    }
  }
}