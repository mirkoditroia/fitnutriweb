rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGOLE TEMPORANEE - APERTE PER DEBUG
    // ATTENZIONE: Queste regole permettono accesso a tutti gli utenti autenticati
    
    match /bookings/{id} {
      allow read, write: if request.auth != null;
    }

    match /clients/{id} {
      allow read, write: if request.auth != null;
    }

    match /packages/{id} {
      allow read, write: if request.auth != null;
    }

    match /availability/{date} {
      allow read, write: if request.auth != null;
    }

    match /content/{doc} {
      allow read, write: if request.auth != null;
    }

    match /clientProgress/{progressId} {
      allow read, write: if request.auth != null;
    }

    match /uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
