rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to packages for all users
    match /packages/{document} {
      allow read: if true;
      allow write: if false; // Only admin should write via Admin SDK
    }
    
    // Allow read/write access to bookings for authenticated users
    match /bookings/{document} {
      allow read, write: if true; // For now, allow all - in production add auth
    }
    
    // Allow read access to content for all users
    match /content/{document} {
      allow read: if true;
      allow write: if false; // Only admin should write via Admin SDK
    }
    
    // Allow read access to availability for all users
    match /availability/{document} {
      allow read: if true;
      allow write: if false; // Only admin should write via Admin SDK
    }
    
    // Allow read/write access to clients for authenticated users
    match /clients/{document} {
      allow read, write: if true; // For now, allow all - in production add auth
    }
  }
}
